<h1><%= @event.title %></h1>

<h2><%= @event.date %></h2>
<h2><%= @event.location %></h2>
<h3>Number of Attendees: <%= @event.attendees.count %></h3>
<h3>List of Attendees</h3>
<% @event.attendees.each do |attendee| %>
  <p><%= attendee.email %></p>
<% end %>

<%= button_to 'Click to record your attendance.',
              event_event_attendings_path(@event), method: :post %>

<%= link_to 'Back', :back %>
