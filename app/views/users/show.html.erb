<h1><%= @user.email %></h1>

<h2>Created Events</h2>
<% @user.created_events.each do |event| %>
  <h3><%= link_to event.title, event %></h3>
<% end %>

<h2>Future Events</h2>
<% @user.attended_events.where('date > ?', DateTime.now).each do |event| %>
  <h3><%= link_to event.title, event %></h3>
<% end %>

<h2>Past Events</h2>
<% @user.attended_events.where('date < ?', DateTime.now).each do |event| %>
  <h3><%= link_to event.title, event %></h3>
<% end %>
